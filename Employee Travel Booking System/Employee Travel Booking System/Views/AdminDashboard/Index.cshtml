
@{
    ViewBag.Title = "Index";
    Layout = null; ;
}

<h2>Admin Dashboard</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Adjusted Card Styles */
        .card {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .card-body {
            text-align: center;
            padding: 20px;
        }

        .card-text {
            margin-bottom: 20px;
        }

        .btn {
            border-radius: 20px;
            padding: 10px 20px;
        }

        /* Footer Styles */
        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        /* Login Section Styles */
        .login-section {
            position: fixed;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                            <a class="dropdown-item" href="#">Manage Employees</a>
                            <a class="dropdown-item" href="#">Manage Managers</a>
                            <a class="dropdown-item" href="#">Manage Travel Agents</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">View Reports</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRequests" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Requests
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownRequests">
                            <a class="dropdown-item" href="#">View Requests</a>
                            <a class="dropdown-item" href="#">Approve/Reject Requests</a>
                            <a class="dropdown-item" href="#">Request Reports</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Manage Departments</a>
                        </div>
                    </li>
                    <li class="nav-item ml-auto">
                        <a class="nav-link" href="#">Login <span class="sr-only"></span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="start-screen">
            <h2>Welcome to Admin Dashboard</h2>
            <p>You can manage employees, managers, travel agents, and handle travel requests from this dashboard.</p>
        </div>
        <div class="row mt-4 justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        Employee Management
                    </div>
                    <div class="card-body">
                        <p class="card-text">Manage employees, assign departments, and roles.</p>
                        <a href="#" class="btn btn-primary">Manage Employees</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <p class="card-text">View, approve, and reject travel requests.</p>
                        <a href="#" class="btn btn-success">View Requests</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white py-3">
        <div class="container">
            <p>&copy; 2024 - Employee Travel Booking System</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
