<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f8f8;
            color: #333;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        .navbar {
            background-color: #10898D;
            border: none;
            border-radius: 0;
            transition: background-color 0.3s ease;
            position: fixed;
            top: 0;
            width: 100%;
        }

        .navbar-brand, .navbar-nav > li > a {
            color: #fff;
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }

        .navbar-toggle {
            border-color: #fff;
            transition: border-color 0.3s ease;
            background-color: transparent;
        }

            .navbar-toggle .icon-bar {
                background-color: #fff;
            }

        .container.body-content {
            padding-top: 70px;
            margin-bottom: 50px;
            animation-name: fadeIn;
            animation-duration: 1s;
            padding-left: 15px;
            padding-right: 15px;
            margin-left: auto;
            margin-right: auto;
        }

        footer {
            background-color: #10898D;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            transition: background-color 0.3s ease;
            left: 0;
        }

            footer p {
                margin: 0;
                font-size: 1rem;
                color: white;
            }

        .navbar-nav > li {
            margin-left: 15px;
            margin-right: 15px;
        }

            .navbar-nav > li > a {
                padding-top: 15px;
                padding-bottom: 15px;
                color: #fff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .navbar-nav > li > a:hover {
                    color: #F2F2F2;
                }

        .navbar-collapse {
            text-align: center;
        }

            .navbar-collapse ul {
                margin: 0;
                padding: 0;
                list-style-type: none;
            }

            .navbar-collapse li {
                display: inline-block;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ETB System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" })</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content fadeIn">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Employee Travel Booking System</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
